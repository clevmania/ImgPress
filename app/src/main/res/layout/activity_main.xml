<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.clevmania.imgpress.MainActivity">

    <TextView
        android:id="@+id/tv_actual_img"
        android:textColor="@color/colorPrimary"
        android:text="Actual Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_actual_img"
        android:background="@drawable/image_border"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tv_compressed_img_size"
        android:textColor="@color/colorGreen"
        android:text="Compressed Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@drawable/image_border"
        android:id="@+id/iv_compressed_img"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>
